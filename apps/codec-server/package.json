{
  "name": "@boilerplate/codec-server",
  "version": "0.0.1",
  "main": "dist/index.js",
  "private": true,
  "scripts": {
    "clean": "rm -rf ./.turbo ./dist tsconfig.tsbuildinfo",
    "build": "tsc --build",
    "build.watch": "tsc --build --watch",
    "lint": "eslint .",
    "start": "ts-node src/index.ts",
    "start.watch": "nodemon src/index.ts",
    "dev": "ts-node src/index.ts"
  },
  "nodemonConfig": {
    "execMap": {
      "ts": "ts-node"
    },
    "ext": "ts",
    "watch": [
      "src"
    ]
  },
  "dependencies": {
    "@boilerplate/common": "*",
    "@boilerplate/temporalio": "*",
    "@temporalio/proto": "^1.11.7",
    "cors": "^2.8.5",
    "express": "^4.18.0",
    "yargs": "^16.2.0"
  },
  "devDependencies": {
    "@tsconfig/node20": "^20.1.4",
    "@types/node": "^20.14.14",
    "@types/cors": "^2.8.12",
    "@types/ejson": "^2.1.3",
    "@types/express": "^4.17.13",
    "@types/ronomon__crypto-async": "^2.0.0",
    "@types/yargs": "^17.0.10",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-deprecation": "^1.5.0",
    "nodemon": "^3.1.4",
    "prettier": "^3.3.3",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.4"
  }
}